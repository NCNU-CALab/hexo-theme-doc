<div class="doc-content">
  <div class="dc-page">
    <div class="dc-card">
      <div id="react-search-results-root"></div>
      <div id="page-content" class="doc-formatting">
        <h1><%- page.title %></h1>

        <% if (page.categories && page.categories.length) { %>
          <%
            let categoryList = [];
            for (let category of page.categories.data) {
              categoryList.push(`<a href="${url_for(category.path)}">${category.name}</a>`);
            }
          %>
          <h4>題目來源：<%- categoryList.join('、') %></h4>
        <% } %>

        <% if (page.tags && page.tags.length) { %>
          <%
            let tagList = [];
            for (let tag of page.tags.data) {
              tagList.push(`<a href="${url_for(tag.path)}">#${tag.name}</a>`);
            }
          %>
          <h4><%- tagList.join(' ') %></h4>
        <% } %>

        <%- page.content %>
        <div id="react-support-footer-root"></div>
      </div>
    </div>
  </div>
</div>
